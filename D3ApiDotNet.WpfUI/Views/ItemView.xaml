<UserControl x:Class="D3ApiDotNet.WpfUI.Views.ItemView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:D3ApiDotNet.WpfUI.Views"
             HorizontalAlignment="Center" VerticalAlignment="Center"
             mc:Ignorable="d">
    <Border Name="ItemBorder" Style="{StaticResource YellowItemBorderStyle}" VerticalAlignment="Center" HorizontalAlignment="Center"
            ToolTipService.ShowDuration="3600000" ToolTipService.BetweenShowDelay="0">
        <Image Name="ItemImage" Source="http://media.blizzard.com/d3/icons/items/large/pants_001_demonhunter_male.png" Stretch="None"/>
        <Border.ToolTip>
            <ToolTip>
                <views:ItemDetailView x:Name="DetailView" />
            </ToolTip>
        </Border.ToolTip>
    </Border>
</UserControl>
