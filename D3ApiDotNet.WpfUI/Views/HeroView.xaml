<UserControl x:Class="D3ApiDotNet.WpfUI.Views.HeroView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:D3ApiDotNet.WpfUI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="734" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="ItemStyle" TargetType="views:ItemView">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="Auto"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <views:ItemView Grid.Row="1" Grid.Column="1" Style="{StaticResource ItemStyle}" x:Name="ShoulderItemView" />
        <views:ItemView Grid.Row="1" Grid.Column="2" Style="{StaticResource ItemStyle}" x:Name="HeadItemView"/>
        <views:ItemView Grid.Row="1" Grid.Column="3" Style="{StaticResource ItemStyle}" x:Name="AmuletItemView"/>

        <views:ItemView Grid.Row="2" Grid.Column="1" Style="{StaticResource ItemStyle}" x:Name="HandItemView"/>
        <views:ItemView Grid.Row="2" Grid.Column="2" Style="{StaticResource ItemStyle}" x:Name="ChestItemView"/>
        <views:ItemView Grid.Row="2" Grid.Column="3" Style="{StaticResource ItemStyle}" x:Name="BracerItemView"/>

        <views:ItemView Grid.Row="3" Grid.Column="1" Style="{StaticResource ItemStyle}" x:Name="LeftRingItemView"/>
        <views:ItemView Grid.Row="3" Grid.Column="2" Style="{StaticResource ItemStyle}" x:Name="WaistItemView"/>
        <views:ItemView Grid.Row="3" Grid.Column="3" Style="{StaticResource ItemStyle}" x:Name="RightRingItemView"/>

        <views:ItemView Grid.Row="4" Grid.Column="1" Style="{StaticResource ItemStyle}" x:Name="MainHandItemView" Grid.RowSpan="2"/>
        <views:ItemView Grid.Row="4" Grid.Column="2" Style="{StaticResource ItemStyle}" x:Name="PantsItemView"/>
        <views:ItemView Grid.Row="4" Grid.Column="3" Style="{StaticResource ItemStyle}" x:Name="OffHandItemView" Grid.RowSpan="2"/>

        <views:ItemView Grid.Row="5" Grid.Column="2" Style="{StaticResource ItemStyle}" x:Name="BootsItemView"/>

    </Grid>
</UserControl>