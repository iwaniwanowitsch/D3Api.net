<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <!-- Damaged Item -->
    <Color x:Key="ItemBackgroundColorGray">DimGray</Color>
    <!-- Default Item -->
    <Color x:Key="ItemBackgroundColorWhite">LightGray</Color>
    <!-- Blue Item -->
    <Color x:Key="ItemBackgroundColorBlue">CornflowerBlue</Color>
    <!-- Golden Item -->
    <Color x:Key="ItemBackgroundColorYellow">Gold</Color>
    <!-- Legendary Item -->
    <Color x:Key="ItemBackgroundColorOrange">#ff6c00</Color>
    <!-- Set Item -->
    <Color x:Key="ItemBackgroundColorGreen">LimeGreen</Color>
</ResourceDictionary>