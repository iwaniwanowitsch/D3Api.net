<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Item Colors -->
    <Color x:Key="ItemBackgroundColorGray">DimGray</Color>
    <Color x:Key="ItemBackgroundColorWhite">LightGray</Color>
    <Color x:Key="ItemBackgroundColorBlue">CornflowerBlue</Color>
    <Color x:Key="ItemBackgroundColorYellow">Gold</Color>
    <Color x:Key="ItemBackgroundColorOrange">#ff6c00</Color>
    <Color x:Key="ItemBackgroundColorGreen">LimeGreen</Color>

    <!-- Item Affix Numeration Colos -->
    <Color x:Key="ItemAffixNumerationDefault">DimGray</Color>
    <Color x:Key="ItemAffixNumerationUtility">#ff6c00</Color>
    <Color x:Key="ItemAffixNumerationEnchant">CornflowerBlue</Color>
    
    <!-- Hero Colors -->
    <Color x:Key="HeroClassColorBarbarian">IndianRed</Color>
    <Color x:Key="HeroClassColorCrusader">Silver</Color>
    <Color x:Key="HeroClassColorDemonhunter">MediumPurple</Color>
    <Color x:Key="HeroClassColorMonk">Gold</Color>
    <Color x:Key="HeroClassColorWitchdoctor">LimeGreen</Color>
    <Color x:Key="HeroClassColorWizard">DodgerBlue</Color>
</ResourceDictionary>